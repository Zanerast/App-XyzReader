<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/list_item_photo_margin_horizontal"
            android:layout_marginStart="@dimen/list_item_photo_margin_horizontal"
            android:layout_marginTop="@dimen/list_item_photo_margin_top"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:transitionName="@string/transition_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_article_title"
            style="@style/ThemeListItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/list_item_title_padding_bottom"
            android:paddingEnd="@dimen/list_item_body_text_padding_horizontal"
            android:paddingStart="@dimen/list_item_body_text_padding_horizontal"
            android:paddingTop="@dimen/list_item_title_top_padding"
            app:layout_constraintBottom_toTopOf="@+id/tv_article_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_thumbnail"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_article_subtitle"
            style="@style/ThemeListItemSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingEnd="@dimen/list_item_body_text_padding_horizontal"
            android:paddingStart="@dimen/list_item_body_text_padding_horizontal"
            android:paddingBottom="@dimen/list_item_body_text_padding_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="subTitle" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
